{
  "name": "dashboard-template",
  "version": "1.0.0",
  "scripts": {
    "build-css": "tailwindcss -i ./src/css/input.css -o ./html-version/assets/css/output.css --watch",
    "build": "tailwindcss -i ./src/css/input.css -o ./html-version/assets/css/output.css --minify",
    "serve": "npx serve html-version -l 3000",
    "dev": "npm run build-css & npm run serve"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "serve": "^14.2.1"
  }
}
